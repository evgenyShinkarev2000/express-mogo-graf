{
  "name": "express-mogo-graf",
  "version": "1.0.0",
  "description": "try create fullstack app with mongo db",
  "main": "index.js",
  "type": "module",
  "watch": {
    "build": {
      "patterns": [
        "./src",
        "./api"
      ],
      "extensions": "ts"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "remove-compiled": "rimraf ./dist/* && rimraf ./api/*.js",
    "compile": "npx tsc -p ./ && npx tsc -p ./api/",
    "build": "npm run remove-compiled && npm run compile",
    "start": "node index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/mongoose": "^5.11.97",
    "mongoose": "^6.1.6",
    "npm-watch": "^0.11.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "express": "^4.17.2"
  }
}
